#!/usr/bin/env sh

if command -v zsh >/dev/null 2>&1; then
    zsh "$ZSH/tools/upgrade.sh"
fi

if command -v brew >/dev/null 2>&1; then
    printf "\n====== brew update ======\n"
    brew update

    printf "\n====== brew upgrade ======\n"
    brew upgrade

    printf "\n====== brew upgrade --cask ======\n"
    brew upgrade --cask

    printf "\n====== brew link ======\n"
    brew unlink node@18 && brew link --overwrite node@18

    printf "\n====== brew cleanup ======\n"
    brew cleanup
fi

if command -v composer >/dev/null 2>&1; then
    printf "\n====== composer self-update ======\n"
    composer self-update

    printf "\n====== composer global update ======\n"
    composer global update
fi

if command -v npm >/dev/null 2>&1; then
    printf "\n====== npm update -g --save ======\n"
    npm update -g --save
fi
